<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:background="@color/blue_grey_800"
        android:padding="@dimen/d10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ItemTitle"
        android:text="@string/item_book_title" />
    <TextView
        android:id="@+id/item_book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ItemDescription"
        android:transitionName="transition_titulo"
        android:layout_below="@id/item_book_title"
        android:text="@string/item_book_description" />


    </RelativeLayout>
</android.support.v7.widget.CardView>